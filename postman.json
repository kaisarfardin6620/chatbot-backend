{
	"info": {
		"_postman_id": "c1f2b3a4-5d6e-7f8a-9b0c-1d2e3f4a5b6c",
		"name": "Chatbot Assistant Challenge",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Get Session ID",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = JSON.parse(responseBody);",
							"pm.collectionVariables.set(\"sessionId\", jsonData.sessionId);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "http://127.0.0.1:8000/api/chat/session",
					"protocol": "http",
					"host": [
						"127",
						"0",
						"0",
						"1"
					],
					"port": "8000",
					"path": [
						"api",
						"chat",
						"session"
					]
				}
			},
			"response": []
		},
		{
			"name": "2. Connect to WebSocket Chat",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "ws://127.0.0.1:8000/ws/{{sessionId}}",
					"protocol": "ws",
					"host": [
						"127",
						"0",
						"0",
						"1"
					],
					"port": "8000",
					"path": [
						"ws",
						"{{sessionId}}"
					]
				},
				"description": "This is a WebSocket request. In Postman, you must create a NEW WebSocket request (not HTTP) and use this URL. The `{{sessionId}}` will be filled automatically after you run the '1. Get Session ID' request."
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "sessionId",
			"value": "",
			"type": "string"
		}
	]
}